<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <Button
                                android:id="@+id/info_layout_back_btn"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/login_btn_anime"
                                android:foreground="@drawable/main_activity_back" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8">

                            <TextView
                                android:id="@+id/info_layout_title_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/ali_mama_fang"
                                android:gravity="center"
                                android:letterSpacing="0.6"
                                android:text="@string/unload_title"
                                android:textColor="@color/deep_gray"
                                android:textSize="22sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_layout_base_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/ali_mama_fang"
                                android:letterSpacing="0.4"
                                android:text="@string/info"
                                android:textColor="@color/black"
                                android:textSize="19sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/info_layout_info_cube"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/publish_target"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="NestedWeights" />

                                <TextView
                                    android:id="@+id/info_layout_publish_target_text_view"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/unload_content"
                                    android:textColor="@color/gray"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/vacation_info_name"
                                    android:textColor="@color/sensitive_green"
                                    android:textSize="18sp"
                                    tools:ignore="NestedWeights" />

                                <TextView
                                    android:id="@+id/info_layout_vacation_code_text_view"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/unload_content"
                                    android:textColor="@color/gray"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/vacation_info_type"
                                    android:textColor="@color/sensitive_green"
                                    android:textSize="18sp"
                                    tools:ignore="NestedWeights" />

                                <TextView
                                    android:id="@+id/info_layout_vacation_type_text_view"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/unload_content"
                                    android:textColor="@color/gray"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/vacation_info_during"
                                    android:textColor="@color/sensitive_green"
                                    android:textSize="18sp"
                                    tools:ignore="NestedWeights" />

                                <TextView
                                    android:id="@+id/info_layout_vacation_during_text_view"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start|center_vertical"
                                    android:text="@string/unload_content"
                                    android:textColor="@color/gray"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="3"
                                android:orientation="horizontal"
                                tools:ignore="NestedWeights">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start"
                                    android:text="@string/vacation_info_des"
                                    android:textColor="@color/sensitive_green"
                                    android:textSize="18sp"
                                    tools:ignore="NestedWeights" />

                                <TextView
                                    android:id="@+id/info_layout_vacation_des_text_view"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:gravity="start"
                                    android:text="@string/unload_content"
                                    android:textColor="@color/gray"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="3dp"
                            android:background="@color/hint_gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="27dp">

                            <ImageView
                                android:id="@+id/info_layout_more_btn"
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/info_layout_more_info" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/ali_mama_fang"
                            android:gravity="center"
                            android:letterSpacing="0.2"
                            android:text="@string/start_report"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/bottom_board_background"
                            android:fontFamily="@font/ali_mama_fang"
                            android:gravity="center"
                            android:text="@string/optional_report"
                            android:textColor="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bottom_board_background">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:textColor="@color/sensitive_green"
                                android:text="@string/live_status"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:fontFamily="@font/ali_mama_fang"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7">

                                <RadioGroup
                                    android:id="@+id/infos_live_status_raido_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/infos_live_true_radio_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/ali_mama_fang"
                                        android:text="@string/live_false"
                                        android:layout_marginRight="25dp"/>

                                    <RadioButton
                                        android:id="@+id/infos_live_false_radio_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/ali_mama_fang"
                                        android:text="@string/live_true"
                                        android:layout_marginLeft="25dp"/>

                                </RadioGroup>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="7dp"
                                android:textColor="@color/sensitive_green"
                                android:fontFamily="@font/ali_mama_fang"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:text="@string/live_location"/>
                        </LinearLayout>

                            <TextView
                                android:id="@+id/location_text_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:text="@string/example_location"
                                android:fontFamily="@font/ali_mama_fang"
                                android:gravity="center"
                                android:textColor="@color/black"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                            <ImageView
                                android:id="@+id/location_more_btn"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/location_more"
                                android:layout_centerInParent="true"/>

                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/bottom_board_background">

                            <EditText
                                android:id="@+id/location_more_edit_text"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:hint="@string/more_location"
                                android:textSize="16sp"
                                android:fontFamily="@font/ali_mama_fang"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:background="@null"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="@drawable/bottom_board_background">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="7dp"
                                    android:text="@string/live_method"
                                    android:gravity="start"

                                    android:fontFamily="@font/ali_mama_fang"
                                    android:textSize="16sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7">

                                <EditText
                                    android:id="@+id/live_method_edit_text"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:background="@null"
                                    android:hint="@string/live_method_hint"
                                    android:textColorHint="@color/hint_gray"
                                    android:gravity="start"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/ali_mama_fang"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bottom_board_background">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="7dp"
                                    android:text="@string/emergency_telephone"
                                    android:gravity="center"
                                    android:textColor="@color/sensitive_green"
                                    android:fontFamily="@font/ali_mama_fang"
                                    android:textSize="16sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7">

                                <EditText
                                    android:id="@+id/other_infos_edit_text"
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:layout_centerInParent="true"
                                    android:background="@null"
                                    android:hint="@string/emergency_telephone_hint"
                                    android:textColorHint="@color/hint_gray"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/ali_mama_fang"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/infos_report_submit_tips_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:textColor="@color/liji_material_red_500"
                                android:fontFamily="@font/ali_mama_fang"
                                android:text="@string/infos_submit_sensitive"
                                android:visibility="invisible"/>

                            <Button
                                android:id="@+id/infos_submit_btn"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:background="@drawable/login_btn_anime"
                                android:layout_centerInParent="true"
                                android:text="@string/infos_submit"
                                android:textSize="20sp"
                                android:letterSpacing="0.2"
                                android:fontFamily="@font/ali_mama_fang"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/infos_report_tips_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/hint_gray"
                                android:fontFamily="@font/ali_mama_fang"
                                android:text="@string/infos_submit_tips"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>